{
  "name": "three-quake",
  "version": "1.0.0",
  "description": "Quake in Three.js - A WebGL port of the classic Quake engine",
  "type": "module",
  "scripts": {
    "start": "bun run serve",
    "serve": "bun --bun serve.js",
    "dev": "bun --bun serve.js",
    "check": "tsc --noEmit",
    "check:watch": "tsc --noEmit --watch"
  },
  "keywords": [
    "quake",
    "three.js",
    "webgl",
    "game"
  ],
  "license": "GPL-2.0",
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/three": "^0.182.0",
    "typescript": "^5.3.0"
  }
}
